            <Button Content="CONSULTAR CURSO" HorizontalAlignment="Center" Margin="0,167,0,0" Grid.Row="1" VerticalAlignment="Top" Height="72" Width="238" FontSize="16" FontFamily="Arial Black" Click="Button_Click2" Background="#FFEF5B6B" Foreground="White"/>

        </Grid>
    </Grid>
</Window>
