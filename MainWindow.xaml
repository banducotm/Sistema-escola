                </Label.RenderTransform>
            </Label>
            <Button Content="CADASTRAR CURSO" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Top" Height="72" Width="238" FontSize="16" FontFamily="Arial Black" Click="Button_Click1" Background="#FFEF5B6B" Foreground="White" Margin="0,61,0,0"/>
