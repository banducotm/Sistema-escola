            <Grid.RowDefinitions>
                <RowDefinition Height="43*"/>
                <RowDefinition Height="114*"/>
                <RowDefinition Height="60*"/>
            </Grid.RowDefinitions>
            <Label Content="SYSTEM ESCOLA" HorizontalAlignment="Left" VerticalAlignment="Top" Width="389" FontSize="48" FontFamily="Gill Sans Ultra Bold" OpacityMask="#FFC2C2C2" Height="77" Margin="225,65,0,0" RenderTransformOrigin="0.5,0.5" FontWeight="Normal" Background="#0CFFFFFF" Foreground="#DDFFFFFF" Grid.RowSpan="2">
